            </table>
          </div>
          <div>
            <h1>Transaction Types</h1>
            <%= image_tag "donut-chart.png", id: "donut-chart" %>
          </div>
          <div>
            <h1>Activity Location</h1>
            <%= image_tag "map.png", id: "map" %>
          </div>
        </div>
        <div class="col-sm-8 col-md-8">
          <div id="alert-bkdn">
